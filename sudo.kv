<Instr>:
    name: "instr"
    
    BoxLayout:
        orientation: 'vertical'
        padding: '8sp'
        ScrollView:
            size_hint: 1,5
            do_scroll_x: False
            do_scroll_y: True    
            Label:
                text: root.my_text
                font_size: '24sp'
                size_hint_x: 1.0
                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]
                markup: True
                halign: "left"
                valign: "top"
                
                

        Button:
            text: "Got it!"
            font_size: '28sp'
            on_release:
                root.manager.current = "main"


<InputBox@TextInput>:
    multiline: False
    write_tab: False
    padding_y: '4sp',0
    halign: 'center'
    font_name: 'Roboto-Bold'
    font_size: '28sp'
    
    

